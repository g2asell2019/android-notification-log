<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_centerInParent="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableRow
        android:layout_marginHorizontal="50dp"
        >

        <EditText
            android:id="@+id/text_to_speak"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/settings_test_speech"

            android:inputType="text"
            android:text="" />

    </TableRow>

    <TableRow
        android:layout_marginHorizontal="50dp"
        >
        <TextView
            android:id="@+id/text_view_for_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:ems="10"
            android:hint="@string/settings_search_languages"
            android:background="@android:drawable/editbox_background"
            />
        <!-- "@drawable/ic_dropdown" is "vector asset" of down arrow sign -->
<!--        <Spinner-->
<!--            android:id="@+id/speech_lang"-->
<!--            android:layout_height="wrap_content" />-->




    </TableRow>
    <TableRow
        android:padding="2dp"
        android:layout_marginHorizontal="50dp"

        >
        <Button
            android:id="@+id/speak_btn"
            android:text="Speak" />
    </TableRow>
    <TableRow>

    </TableRow>
    <TableRow>

    </TableRow>
</TableLayout>
